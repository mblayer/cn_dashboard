---
// src/components/MatchesList.astro
import type { MatchFromAPI, MapFromAPI } from '../types';
import MatchCard from './MatchCard.astro';

interface Props {
  matches: MatchFromAPI[];
  maps: MapFromAPI[];
}

const { matches, maps } = Astro.props as Props;
---

<!-- Vista mobile/tablet/desktop: usa el mismo componente/card para todas las resoluciones -->
<section class="flex flex-col gap-6 p-4 sm:grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
  {matches.map((match) => {
    const mapInfo = maps.find((m) => m.name === match.map);
    return <MatchCard match={match} mapInfo={mapInfo} />;
  })}
</section>
